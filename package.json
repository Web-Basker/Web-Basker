{
  "name": "webbasker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf public",
    "build:styles": "node-sass src/styles -o public/css && postcss public/css/*.css --use autoprefixer -d public/css",
    "build:js": "copyfiles src/js/*.js public/js",
    "build:html": "copyfiles src/*.html public",
    "build:images": "copyfiles src/images/* public/images",
    "build": "npm run clean && npm run build:styles && npm run build:js && npm run build:html && npm run build:images",
    "watch": "onchange 'src/**/*' -- npm run build"
  },
  "keywords": [],
  "author": "Steven Pedersen",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "copyfiles": "^2.4.1",
    "node-sass": "^9.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "bootstrap": "^5.3.2"
  }
}
